<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <Version>0.8.17</Version>
        <TargetFramework>net9.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <EnableDynamicLoading>true</EnableDynamicLoading>
        <AvaloniaUseCompiledBindingsByDefault>true</AvaloniaUseCompiledBindingsByDefault>
        <SelfContained>false</SelfContained>
        <PackageLicenseFile>License.md</PackageLicenseFile>
    </PropertyGroup>

    <PropertyGroup>
        <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
        <AppendRuntimeIdentifierToOutputPath>false</AppendRuntimeIdentifierToOutputPath>
        <OutputPath>../../bin/$(Configuration)/</OutputPath>
    </PropertyGroup>

    <ItemGroup>
        <!-- Include must be the fully qualified .NET type name of the Attribute to create. -->
        <AssemblyAttribute Include="System.Reflection.AssemblyMetadataAttribute">
            <!-- _Parameter1, _Parameter2, etc. correspond to the
                matching parameter of a constructor of that .NET attribute type -->
            <_Parameter1>BuildDir</_Parameter1>
            <_Parameter2>$(MSBuildProjectDirectory)/$(OutDir)</_Parameter2>
        </AssemblyAttribute>
    </ItemGroup>


    <ItemGroup>
        <AvaloniaResource Include="Assets\**\*.*" />
    </ItemGroup>
    
    <ItemGroup>
      <Folder Include="Assets\Fonts\" />
    </ItemGroup>
    
    <ItemGroup>
        <None Include="../../License.md" Pack="true" PackagePath=""/>
    </ItemGroup>
    
    <ItemGroup>
      <PackageReference Include="OneWare.Essentials" Version="0.11.3" Private="false" ExcludeAssets="runtime;Native">
              <PrivateAssets>all</PrivateAssets>
      </PackageReference>
      <PackageReference Include="OneWare.UniversalFpgaProjectSystem" Version="0.41.4" Private="false" ExcludeAssets="runtime;Native">
          <PrivateAssets>all</PrivateAssets>
      </PackageReference>
    </ItemGroup>
    
    <ItemGroup>
      <ProjectReference Include="..\FEntwumS.Common\FEntwumS.Common.csproj" />
    </ItemGroup>

    <Target Name="GenerateCompatibilityFile" AfterTargets="Build">
        <ItemGroup>
            <FilteredDependencies Include="@(PackageReference)" Condition="'%(Private)' == 'false'" />
        </ItemGroup>

        <WriteLinesToFile
                File="$(OutDir)compatibility.txt"
                Lines="@(FilteredDependencies->'%(Identity) : %(Version)')"
                Overwrite="true" />
    </Target>
    
</Project>
